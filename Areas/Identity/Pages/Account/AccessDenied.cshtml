@page
@model ContactManager.Areas.Identity.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-danger">
            <div class="card-header bg-danger text-white text-center">
                <h3 class="mb-0">
                    <i class="fas fa-ban me-2"></i>Access Denied
                </h3>
            </div>
            <div class="card-body text-center p-5">
                <i class="fas fa-exclamation-triangle fa-4x text-danger mb-4"></i>
                <h4 class="text-danger mb-3">Sorry, you don't have permission to access this resource.</h4>
                <p class="text-muted mb-4">
                    You may need to log in with the appropriate credentials or contact the administrator 
                    if you believe this is an error.
                </p>
                
                <div class="d-flex justify-content-center gap-3">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        <i class="fas fa-home me-1"></i>Go Home
                    </a>
                    <a href="@Url.Page("/Account/Login", new { area = "Identity" })" class="btn btn-outline-primary">
                        <i class="fas fa-sign-in-alt me-1"></i>Sign In
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
