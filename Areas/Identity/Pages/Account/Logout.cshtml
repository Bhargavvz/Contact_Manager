@page
@model ContactManager.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-warning text-dark text-center">
                <h4 class="mb-0">
                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                </h4>
            </div>
            <div class="card-body text-center p-4">
                <i class="fas fa-sign-out-alt fa-3x text-warning mb-3"></i>
                <h5>Are you sure you want to log out?</h5>
                <p class="text-muted">You will need to sign in again to access your contacts.</p>
                
                <form asp-page-handler="Post" method="post" class="d-inline">
                    <button type="submit" class="btn btn-warning me-2">
                        <i class="fas fa-sign-out-alt me-1"></i>Yes, Log Out
                    </button>
                </form>
                <a href="javascript:history.back()" class="btn btn-outline-secondary">
                    <i class="fas fa-times me-1"></i>Cancel
                </a>
            </div>
        </div>
    </div>
</div>
